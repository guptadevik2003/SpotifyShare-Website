    <!-- Modal Section -->
    <div class="modal-bg" id="login-modal">
        <div class="modal-front">
            <div class="modal-title">Login to SpotifyShare</div>
            <div class="form-details">
                <div class="input-box">
                    <input type="password" name="password" id="password" required>
